<%if user_signed_in?%>
  <%if policy(@category).new?%>
    <h1 class="display-4">Fill the details to Add a New Category</h1>
    <%= render 'form', category: @category %>
    <br/>
    <%= link_to 'Back', categories_path, class:"btn btn-secondary" %>
  <%else%>
    <p class="alert alert-danger">You don't have permission</p>
  <%end%>
<%else%>
  <p class="alert alert-danger">You don't have permission</p>
<%end%>

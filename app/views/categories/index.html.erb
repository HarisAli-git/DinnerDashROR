<h1>Categories List</h1>
<table class="table table-striped table-hover table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @category.each do |cat| %>
      <tr>
        <td><%= cat.name %>
        <td><%= link_to 'View Items in this category', cat, class: "btn btn-outline-secondary nt-3" %></td>
          <%if user_signed_in?%>
            <%if policy(cat).destroy?%>
              <td><%= link_to 'Edit', edit_category_path(cat), class: "btn btn-outline-info nt-3"  %></td>
              <td><%= link_to 'Destroy', cat, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger nt-3"  %></td>
             </tr>
            <%end%>
          <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%if user_signed_in?%>
  <%if policy(@category).edit?%>
    <%= link_to 'Add New Category', new_category_path, class:"btn btn-dark" %>
  <% end %>
<%end%>

<%= link_to 'Back to home', root_path, class:"btn btn-dark" %>


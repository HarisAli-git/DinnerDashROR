<div>
    <%= link_to 'Keep Shopping', items_path, class: 'btn btn-secondary'%>
</div>

<p id="notice"><%= notice %></p>


<% if @line_items.length == 0 %>
  <p class="alert alert-warning">Your Cart is Empty!</p>
<% else %>

<div class="jumbotron">
  <h1 class="display-4">  
  <strong>Cart
  </strong>
</h1>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">quantity</th>
    </tr>
  </thead>
  <% @line_items.each do |index, details| %>
  <tbody>
    <tr>
        <% item_id = details[:item][:id] %>
      <td><%= details[:item]['title'] %></td>
      <td><%= details[:item]['price'] %></td>
      <td>
        <%=form_for 'quantity', :url => {:controller => 'cart_items', :action => 'update', item_id: details[:item][:id], id: index }, method: :patch  do |form| %>
        <%= form.number_field details[:quantity], :min => 1, :value => details[:quantity], :class => "qty qty-editable-width", "data-message" => item_id %>
        <% end %>
      </td>
    </tr>
  </tbody>

  <%end%>
</table>


<section class="section">

  <div class="columns">
    <div class="column">
      <%= button_to 'Empty Cart', @cart, method: :delete, data: { confirm: "Are you sure? " }, class: "btn btn-secondary" %>
    </div>
    <div class="column total has-text-right">
    <br >
      <h4 class="title is-4">
        <span class="f5 has-text-grey">Total:</span>
      </h4>
    </div>
  </div>
</section>
<%end%>
<%= form_with model: item do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
   </div>

  <div>
    <%= form.label :price %><br>
    <%= form.number_field :price %><br>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %><br>
  </div>

  <div>
  <%= form.collection_select(:category_ids, categories, :id, :name, {}, { :class => "select_box", :style => "display:block;" }) %>
  </div>

  <div>
  <%= form.file_field :avatar %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

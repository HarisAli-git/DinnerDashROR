<%= form_with model: item do |form| %>
  <div class="form-group">
    <%= form.label :title %><br>
    <%= form.text_field :title, class: "form-control"  %>
   </div>

  <div class="form-group">
    <%= form.label :price %><br>
    <%= form.number_field :price, class: "form-control"  %><br>
  </div>

  <div class="form-group">
    <%= form.label :description %><br>
    <%= form.text_area :description, class: "form-control"  %><br>
  </div>

  <div>
  <%= form.collection_select(:category_ids, @categories, :id, :name, {}, { :class => "select_box", :style => "display:block;" }) %>
  </div>

  <br />

  <div class="custom-file"> 
  <%= form.file_field :avatar, class: "custom-file-input"  %>
  </div>

  <br />

  <div class="actions">
    <%= form.submit%>
  </div>
<% end %>
